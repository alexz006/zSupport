<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Определение атрибутов цветов -->
    <attr name="mainBackground" format="reference|color" />
    <attr name="mainText" format="reference|color" />
    <attr name="disabledText" format="reference|color" />

    <!-- Общая тема для DayNight -->
    <style name="Theme.zSupport" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:fontFamily">@font/font_family</item>

        <!-- Используйте атрибуты вместо конкретных цветов -->
        <item name="mainBackground">@color/mainBackground</item>
        <item name="mainText">@color/mainText</item>
        <item name="disabledText">@color/disabledText</item>

        <!-- Force dark mode -->
        <item name="android:forceDarkAllowed">true</item>
    </style>

    <style name="CustomSpinnerStyle" parent="Widget.AppCompat.Spinner">
        <item name="android:background">@drawable/custom_spinner_background</item>
        <item name="android:popupBackground">@drawable/custom_spinner_popup_background</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Style for Snackbar -->
    <color name="disabledText">#A8A8A8</color>
    <color name="white">#FFFFFF</color>
    <color name="colorPrimaryDark">#707070</color> <!-- Белый текст -->
    <color name="grey_300">#888888</color>
    <color name="blue_500">#3B99FF</color>
</resources>
