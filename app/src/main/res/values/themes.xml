<resources xmlns:tools="http://schemas.android.com/tools">

    <attr name="mainBackground" format="reference|color" />
    <attr name="mainText" format="reference|color" />
    <attr name="disabledText" format="reference|color" />

    <style name="Theme.zSupport" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:fontFamily">@font/font_family</item>

        <item name="mainBackground">@color/mainBackground</item>
        <item name="mainText">@color/mainText</item>
        <item name="disabledText">@color/disabledText</item>

        <!-- Force dark mode -->
        <item name="android:forceDarkAllowed">true</item>
    </style>

    <style name="CustomSpinnerStyle" parent="Widget.AppCompat.Spinner">
        <item name="android:background">@drawable/custom_spinner_background</item>
        <item name="android:popupBackground">@drawable/custom_spinner_popup_background</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Общий стиль для кнопок -->
    <style name="CustomButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/custom_button_background</item>
        <item name="android:textColor">#DADADA</item>
        <item name="android:textSize">@dimen/boxAgreementTextSize</item>
        <item name="android:padding">@dimen/buttonsMainPadding</item>
        <item name="android:width">@dimen/buttonsMainWidth</item>
        <item name="android:height">@dimen/buttonsMainHight</item>
    </style>

    <style name="CustomButtonStyleSelected" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/custom_button_selected_background</item>
        <item name="android:textColor">#DADADA</item>
        <item name="android:textSize">@dimen/boxAgreementTextSize</item>
        <item name="android:padding">@dimen/buttonsMainPadding</item>
        <item name="android:width">@dimen/buttonsMainWidth</item>
        <item name="android:height">@dimen/buttonsMainHight</item>
    </style>

    <style name="CustomOFFButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/custom_button_off_background</item>
        <item name="android:textColor">#AAAAAA</item>
        <item name="android:textSize">@dimen/boxAgreementTextSize</item>
        <item name="android:padding">@dimen/buttonsMainPadding</item>
        <item name="android:width">@dimen/buttonsMainWidth</item>
        <item name="android:height">@dimen/buttonsMainHight</item>
    </style>

    <!-- Style for Snackbar -->
    <color name="disabledText">#A8A8A8</color>
    <color name="white">#FFFFFF</color>
    <color name="colorPrimaryDark">#707070</color> <!-- Белый текст -->
    <color name="grey_300">#888888</color>
    <color name="blue_500">#3B99FF</color>

    <!-- Colors for ButtonBar -->
    <color name="buttonBarBGColor">@color/mainBackground</color>
    <color name="buttonBarTextColor">@color/mainText</color>
    <color name="buttonBarBorderColor">@color/mainText</color>
    <color name="buttonBarRippleColor">@color/mainText</color>
    <color name="buttonBarSelectedColor">@color/blue_500</color>

</resources>
