<!-- res/drawable/custom_toast_background.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Закругленные углы -->
    <corners android:radius="12dp" />

    <!-- Заливка фона -->
    <solid android:color="?attr/mainBackground" />

    <!-- Рамка -->
    <stroke
        android:width="2dp"
        android:color="?attr/mainText" />

    <!-- Внутренние отступы -->
    <padding
        android:left="8dp"
        android:top="4dp"
        android:right="8dp"
        android:bottom="4dp" />
</shape>
